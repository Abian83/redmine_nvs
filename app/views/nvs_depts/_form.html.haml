= form_for @nvs_dept do |f|
  - if @nvs_dept.errors.any?
    #error_explanation
      %h2= "#{pluralize(@nvs_dept.errors.count, "error")} prohibited this nvs_dept from being saved:"
      %ul
        - @nvs_dept.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit (t 'Save')
