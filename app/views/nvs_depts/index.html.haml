= render partial: 'layouts/menu'

%h1
  = t ('Departament List')

.autoscroll
  %table.list
    %tr
      %th
        = t "Name"
      %th
        = t "Email"
      %th
      %th

    - @nvs_depts.each do |nvs_dept|
      %tr{:class => "#{cycle('odd', 'even')}"}
        %td= link_to nvs_dept.name, nvs_dept
        %td= nvs_dept.email
        %td= link_to image_tag('edit.png'), edit_nvs_dept_path(nvs_dept)
        %td= link_to image_tag('delete.png'), nvs_dept, :method => :delete, :data => { :confirm => (t 'Are you sure?') }

  %br

  = link_to (t 'New departament'), new_nvs_dept_path
