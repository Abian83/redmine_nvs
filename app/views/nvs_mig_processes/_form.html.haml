    = f.label :nvs_action_type
    = f.number_field :nvs_action_type
  .field
    = f.label :nvs_action_type
    = f.number_field :nvs_action_type
  .field
    = f.label :nvs_action_sequence
    = f.number_field :nvs_action_sequence
  .field
    = f.label :nvs_process_sequence
    = f.number_field :nvs_process_sequence
  .field
